{
    "name": "@eldrforge/kodrdriv",
    "version": "0.0.11",
    "description": "Create Intelligent Release Notes or Change Logs from Git",
    "main": "dist/main.js",
    "type": "module",
    "bin": {
        "kodrdriv": "./dist/main.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/calenvarek/kodrdriv.git"
    },
    "packageManager": "pnpm@10.12.4",
    "scripts": {
        "build": "tsc --noEmit && vite build && copyfiles -u 1 \"src/**/*.md\" dist",
        "start": "dist/main.js",
        "dev": "vite",
        "watch": "vite build --watch",
        "test": "vitest run --coverage",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test",
        "docs:dev": "cd docs && cp ../README.md public/ && pnpm install && pnpm run dev",
        "docs:build": "cd docs && cp ../README.md public/ && pnpm install && pnpm run build",
        "docs:preview": "cd docs && pnpm run preview",
        "docs:test": "cd docs && pnpm run test",
        "docs:coverage": "cd docs && pnpm run coverage"
    },
    "keywords": [
        "git",
        "genai",
        "release",
        "changelog",
        "analysis"
    ],
    "author": "Calen Varek <calenvarek@gmail.com>",
    "license": "Apache-2.0",
    "dependencies": {
        "@octokit/rest": "^22.0.0",
        "@riotprompt/riotprompt": "^0.0.2",
        "@theunwalked/cardigantime": "^0.0.12",
        "commander": "^14.0.0",
        "dayjs": "^1.11.13",
        "dotenv": "^17.0.0",
        "glob": "^11.0.3",
        "js-yaml": "^4.1.0",
        "luxon": "^3.6.1",
        "moment-timezone": "^0.6.0",
        "openai": "^5.8.2",
        "shell-escape": "^0.2.0",
        "winston": "^3.17.0",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.30.0",
        "@rollup/plugin-replace": "^6.0.2",
        "@swc/core": "^1.12.9",
        "@types/js-yaml": "^4.0.9",
        "@types/luxon": "^3.6.2",
        "@types/node": "^24.0.8",
        "@types/shell-escape": "^0.2.3",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^8.35.1",
        "@typescript-eslint/parser": "^8.35.1",
        "@vitest/coverage-v8": "^3.2.4",
        "copyfiles": "^2.4.1",
        "esbuild": "0.25.5",
        "eslint": "^9.30.0",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.3.0",
        "mockdate": "^3.0.5",
        "rollup-plugin-preserve-shebang": "^1.0.1",
        "rollup-plugin-visualizer": "^6.0.3",
        "typescript": "^5.8.3",
        "vite": "^7.0.0",
        "vite-plugin-node": "^5.0.1",
        "vitest": "^3.2.4"
    }
}
